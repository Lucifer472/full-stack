generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sheets{
  id    Int   @id     @default(autoincrement())
  sheetName   String
  employee Employee[]
}

// Emplyees Data Modal
model Employee {
  id             Int   @id       @default(autoincrement())
  fields         EmployeeCustomField[]

  sheetsId  Int     
  sheets    Sheets    @relation(fields: [sheetsId],references: [id],onDelete:  Cascade)
}

model EmployeeCustomField {
  id         Int      @id @default(autoincrement())
  key        String  
  value      String   
  employeeId Int 
  employee   Employee @relation(fields: [employeeId], references: [id],onDelete: Cascade)
}