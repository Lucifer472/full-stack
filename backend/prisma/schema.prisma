generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Emplyees Data Modal
model Employee {
  id             String   @id       @default(cuid())
  fields       EmployeeCustomField[]
}

model EmployeeCustomField {
  id         String      @id @default(cuid())
  key        String  
  value      String   
  employeeId String 
  employee   Employee @relation(fields: [employeeId], references: [id],onDelete: Cascade)
}